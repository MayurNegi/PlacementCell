<section>
  <h1>Add Company:</h1>
  <form method="POST" action="/companies/create">
    <label for="name">Name:</label>
    <input type="text" name="name" placeholder="Name" required />
    <br />
    <label for="description">Description:</label>
    <input
      type="text"
      name="description"
      placeholder="Description"
      required
    /><br />
    <label for="openings">Openings:</label>
    <input type="text" name="openings" placeholder="Openings" required /><br />
    <label for="package">Package (in lpa) :</label>
    <input type="text" name="package" placeholder="Package" required /><br />
    <input type="submit" value="Add" />
  </form>
</section>
